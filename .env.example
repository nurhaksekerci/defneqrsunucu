# Database Configuration
DB_NAME=defneqr
DB_USER=defneqr
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DATABASE_URL="postgresql://defneqr:CHANGE_THIS_STRONG_PASSWORD@postgres:5432/defneqr?schema=public"
# For local development (without Docker), change "postgres" to "localhost" in DATABASE_URL

# Server Configuration
PORT=5000
NODE_ENV=production

# Session Secret (Generate random string!)
SESSION_SECRET=CHANGE_THIS_TO_RANDOM_64_CHARACTER_STRING

# JWT Secrets (Generate random strings!)
JWT_SECRET=CHANGE_THIS_TO_VERY_LONG_RANDOM_STRING_AT_LEAST_64_CHARACTERS
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_VERY_LONG_RANDOM_STRING_64_CHARS
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# URLs
FRONTEND_URL=https://defneqr.com
NEXT_PUBLIC_API_URL=https://api.defneqr.com
NEXT_PUBLIC_SITE_URL=https://defneqr.com

# File Upload
MAX_FILE_SIZE=5242880

# Google OAuth (Create at: https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id-from-console.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-from-console
GOOGLE_CALLBACK_URL=https://api.defneqr.com/api/auth/google/callback

# Google Analytics & Tag Manager (Optional)
# Create at: https://analytics.google.com/ and https://tagmanager.google.com/
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Sentry (Optional - Error Tracking)
SENTRY_DSN=

# Email/SMTP (Natro kurumsal mail - şifre sıfırlama, uyarılar)
# Natro: mail.defneqr.com, port 587, TLS
SMTP_HOST=mail.defneqr.com
SMTP_PORT=587
SMTP_USER=destek@defneqr.com
SMTP_PASS=YOUR_SMTP_PASSWORD
SMTP_FROM=destek@defneqr.com

# Alerting (Optional)
ALERT_EMAIL=admin@yourdomain.com
ALERT_WEBHOOK_URL=

# Monitoring (Optional)
ENABLE_QUERY_MONITORING=true
SLOW_QUERY_THRESHOLD=1000
