# Database
DATABASE_URL="postgresql://username:password@localhost:5432/dijitalmenu?schema=public"

# Server
PORT=5000
NODE_ENV=development

# JWT
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRE=7d

# OAuth (Google)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Session
SESSION_SECRET=your-session-secret-here-change-in-production

# File Upload Security
MAX_FILE_SIZE=5242880
ENABLE_VIRUS_SCAN=false
CLAMSCAN_PATH=clamdscan

# Database Query Monitoring
ENABLE_QUERY_LOGGING=false
SLOW_QUERY_THRESHOLD=1000
LOG_ALL_QUERIES=false

# Image Optimization
ENABLE_IMAGE_OPTIMIZATION=true
IMAGE_MAX_WIDTH=1200
IMAGE_MAX_HEIGHT=1200
IMAGE_JPEG_QUALITY=85
IMAGE_WEBP_QUALITY=85
IMAGE_PNG_COMPRESSION=8
ENABLE_WEBP_CONVERSION=true
ENABLE_THUMBNAIL_GENERATION=false
DELETE_ORIGINAL_UPLOADS=false

# Logging
LOG_LEVEL=info
ENABLE_FILE_LOGGING=false

# Error Tracking (Sentry)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_RELEASE=defneqr@1.0.0
SENTRY_FORCE_DEV=false

# Alerting
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_FROM=alerts@defneqr.com
ALERT_EMAIL_TO=admin@defneqr.com,ops@defneqr.com

# SMTP Settings (for email alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Webhook Alerting (Slack, Discord, etc.)
ALERT_WEBHOOK_ENABLED=false
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Alert Thresholds
ALERT_ERROR_RATE_THRESHOLD=10
ALERT_RESPONSE_TIME_THRESHOLD=5000
ALERT_CPU_USAGE_THRESHOLD=90
ALERT_MEMORY_USAGE_THRESHOLD=90

# Server Info (for alerts)
SERVER_NAME=production-server-1

# Monitoring & Metrics
METRICS_PUBLIC=false
METRICS_TOKEN=your-metrics-token-here-change-in-production
